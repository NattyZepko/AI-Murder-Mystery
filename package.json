    "pptxgenjs": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.55.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
